<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notes_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.projects.android.MyNotes.activity.Notes">

    <android.support.v7.widget.Toolbar
        android:id="@+id/notes_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="?homeAsUpIndicator">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/upDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_spacing"
                android:text="@string/date"
                android:textStyle="bold"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/upDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/default_spacing"
                android:text="@string/done"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/big_text"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/notes_toolbar">

        <TextView
            android:id="@+id/file_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/default_spacing"
            android:drawableEnd="@drawable/ic_attachment"
            android:drawablePadding="@dimen/medium_spacing"
            android:fontFamily="cursive"
            android:onClick="showAttachment"
            android:textSize="@dimen/big_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/displayNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/large_margin"
            android:scrollbars="vertical"
            android:background="@drawable/edittext"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:padding="@dimen/medium_spacing"
            android:textSize="@dimen/big_text" />

        <EditText
            android:id="@+id/editNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/large_margin"
            android:background="@drawable/edittext"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:minLines="40"
            android:padding="10dp"
            android:fontFamily="monospace"
            android:scrollHorizontally="false"
            android:scrollbars="vertical" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemIconTint="@color/colorPrimary"
            app:itemTextColor="@color/colorPrimaryDark"
            app:menu="@menu/bottom_navigation" />

    </RelativeLayout>

</RelativeLayout>