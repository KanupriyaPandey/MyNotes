<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_spacing"
        android:padding="@dimen/thin_padding"/>
    <TextView
        android:id="@+id/create"
        android:layout_below="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/medium_spacing"
        android:layout_marginRight="@dimen/medium_spacing"
        android:layout_marginLeft="@dimen/medium_spacing"
        android:background="@drawable/textview"
        android:drawableStart="@drawable/ic_add"
        android:drawablePadding="@dimen/small_padding"
        android:padding="@dimen/medium_padding"
        android:textSize="@dimen/TitleSize"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/thin_padding"
        android:textColor="@color/primary"
        android:fontFamily="serif-monospace"
        android:text="@string/create_new_notebook"/>
    <EditText
        android:id="@+id/newBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/thin_padding"
        android:paddingTop="@dimen/thin_padding"
        android:paddingHorizontal="@dimen/small_padding"
        android:layout_below="@+id/listView"
        android:layout_marginTop="@dimen/medium_spacing"
        android:layout_marginRight="@dimen/medium_spacing"
        android:layout_marginLeft="@dimen/medium_spacing"
        android:background="@drawable/edittext"
        android:visibility="gone"/>

</RelativeLayout>